<?xml version="1.0"?>
<robot name="custom_robot" xmlns:xacro="http://ros.org/wiki/xacro">

    <material name="blue">
        <color rgba="0.0 0.5 1.0 1.0" />
    </material>
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.5" length="1" />
            </geometry>
            <origin xyz="0 0 0" />
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.5" length="1" />
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0" />
            <inertia ixx="0.6" ixy="0" ixz="0" iyy="0.6" iyz="0" izz="0.3" />
            <!-- <origin xyz="0 0 -0.1"/> -->
        </inertial>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.3" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
        </collision>
        <inertial>
            <mass value="1.0" />
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.001" />
        </inertial>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.535 -0.5" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.3" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
        </collision>
        <inertial>
            <mass value="1.0" />
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.001" />
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.535 -0.5" />
        <axis xyz="0 1 0" />
    </joint>

    <gazebo>
        <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
            <ros>
                <namespace>/</namespace>
                <remapping>cmd_vel:=cmd_vel</remapping>
                <remapping>odom:=odom</remapping>
            </ros>
            <update_rate>30</update_rate>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>1.07</wheel_separation>
            <wheel_diameter>0.6</wheel_diameter>
            <publish_odom>true</publish_odom>
            <publish_wheel_tf>true</publish_wheel_tf>
        </plugin>
    </gazebo>

    <!--
  <link name="caster">
    <visual><geometry><sphere radius="0.03"/></geometry></visual>
    <collision><geometry><sphere radius="0.03"/></geometry></collision>
    <inertial><mass value="0.05"/><inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0"
    izz="1e-4"/></inertial>
  </link>
  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin xyz="-0.25 0 -0.5"/>
  </joint>
  -->

    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>